<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EchoBot</title>
    <link rel="icon" type="image/x-icon" href="../assets/chatbot.ico">
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        integrity="sha512-Fo3rlrZj/k6H0zsw1e4F0l/qJozzOCrTZzglrIHdQ5Lh/jQH28jfHqEjIsk7RrzPazovM1fQzD+PwnnAsqM7g=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            position: relative;
            font-family: sans-serif
        }

        .stickySection {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: rgb(255, 255, 255);
            width: 50%;
            padding: 10px;
            margin: auto;
        }

        .widthM {
            width: 50%;
        }

        @media (max-width: 767.98px) {

            .stickySection,
            .widthM {
                width: 100%;
                padding: 0% 20px;
            }
        }

        .fixed {
            position: fixed;
            top: 0;
            width: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            z-index: 1000;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .loading-spinner {
            display: none;
            margin-left: 10px;
        }

        @keyframes continuousRotate {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }

        .bi-arrow-clockwise {
            animation: continuousRotate 2s linear infinite;
            display: inline-block;
        }

        .down-arrow {
            display: none;
            position: fixed;
            bottom: 60px;
            right: 20px;
            cursor: pointer;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 50%;
            padding: 10px;
            z-index: 1000;
        }

        .logoImage {
            mix-blend-mode: multiply;
        }
    </style>
    <script>
        const fetchData = async () => {
            const responseElement = document.getElementById('response');
            const input = document.getElementById('items').value;
            const spinner = document.querySelector('.loading-spinner');
            const dis = document.getElementById('dis')
            spinner.style.display = 'inline-block';
            try {
                const res = await fetch('https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash-latest:generateContent?key=AIzaSyCQ93s__xvdVIm_CTX49OTN4sr1BU34G-I', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        "contents": [{ "parts": [{ "text": input }] }]
                    })
                });

                const data = await res.json();
                dis.classList.add('d-none');
                const responseText = data.candidates[0].content.parts[0].text;
                document.getElementById('items').value = ''

                responseElement.innerHTML = formatMarkdown(responseText);
            } catch (error) {
                console.log(error);
                responseElement.textContent = 'Error fetching data';
            } finally {
                spinner.style.display = 'none';
                moveToBottom();
            }
        };

        const formatMarkdown = (text) => {
            return text
                .replace(/\*\*\*(.+?)\*\*\*/g, '<strong><em>$1</em></strong>')
                .replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>')
                .replace(/\*(.+?)\*/g, '<em>• $1</em>')
                .replace(/^\* (.+)/gm, '• $1')
                .replace(/•/g, '<br>•')
                .replace(/### (.+)/g, '<h3>$1</h3>')
                .replace(/## (.+)/g, '<h2>$1</h2>')
                .replace(/# (.+)/g, '<h1>$1</h1>')
                .replace(/\n/g, '<br />');
        };

        const handleKeyPress = (event) => {
            if (event.key === 'Enter') {
                fetchData();
            }
        };

        document.addEventListener('keydown', function (event) {
            if (event.key === '/') {
                event.preventDefault();
                const searchInput = document.getElementById('items');
                if (document.activeElement !== searchInput) {
                    searchInput.focus();
                }
            }
        });

        const moveToBottom = () => {
            window.scrollTo({
                top: document.body.scrollHeight,
                behavior: "smooth"
            });
        }

        window.onscroll = function () {
            const downArrow = document.getElementById('downArrow');
            if (document.body.scrollTop === 0 || document.documentElement.scrollTop === 0) {
                downArrow.style.display = 'block';
            } else {
                downArrow.style.display = 'none';
            }
        }

        const scrollToBottom = () => {
            window.scrollTo({
                top: document.body.scrollHeight,
                behavior: "smooth"
            });
        }

    </script>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary fixed d-flex align-items-center">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-semibold" href="#">
                <img src="/echo.png" class="logoImage" width="110" alt="">
            </a>

            <div>
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a href="/logout" class="btn btn-outline-dark mt-2 d-block d-lg-none">
                            Logout <i class="bi bi-box-arrow-right"></i>
                        </a>
                        <a href="/logout" class="btn btn-outline-dark d-none d-lg-block">
                            Logout <i class="bi bi-box-arrow-right"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="text-center stickySection pb-2">
        <div class="rounded-5 mx-5 py-2 mt-3 bg-body-secondary d-flex justify-content-center align-items-center">
            <div class="loading-spinner me-1">
                <i class="bi bi-arrow-clockwise"></i>
            </div>
            <input type="text" id="items" class="w-75 bg-body-secondary fw-semibold pb-1 mt-1" placeholder="Message Bot"
                style="outline: none; border: none;" onkeypress="handleKeyPress(event)">
            <button onclick="fetchData()" style="outline: none; border: none; background-color: white;"
                class="border-none bg-body-secondary">
                <i class="bi bi-search h5"></i>
            </button>
        </div>
    </div>
    <div class="my-3">
        <p class="mx-auto widthM" style="margin-top: 90px; margin-bottom: 100px;" id="response"></p>
    </div>
    <div class="d-flex justify-content-center align-items-center" id="dis">
        <div class="mt-5 h3" id="dis">Welcome! What can I help with?</div>
    </div>

    <div id="downArrow" class="down-arrow" onclick="scrollToBottom()">
        <i class="bi bi-arrow-down-circle h4"></i>
    </div>
    <script>
        function logout() {
            // Function to delete specific cookies
            function deleteCookie(name) {
                document.cookie = name + "=;expires=" + new Date(0).toUTCString() + ";path=/";
            }

            // Delete specific cookies
            deleteCookie('token');
            deleteCookie('session_id');

            // Show a confirmation message
            document.getElementById("message").innerText = "You have been logged out successfully. Cookies removed.";
        }
    </script>
</body>

</html>